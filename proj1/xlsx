import pandas as pd
import numpy as np
#bisher alle spezifischen Arten und Daten nur placeholder
df = pd.read_excel('Pflanzendaten.xlsx')
#print(df['Habitat:'])
df1 = df.dropna()
df2 = df1.to_numpy()
#print (df.type())
def search(Spalte,eintrag,df):
    df2 = df.to_numpy()
    print(df.head())
    Spalte=df[Spalte]
    Name=df['Pflanzenarten:']
    for i in range(len(Spalte)):
        if Spalte[i]==eintrag:
                print(Name[i])
                print(df2[i, :])
    else:
        print(' ')

search('Habitat:','Alpen',df1)
print(df['Habitat:'])